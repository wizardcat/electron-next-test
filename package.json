{
  "name": "electron-next-test",
  "version": "0.1.0",
  "private": true,
  "main": "build/main/main.js",
  "author": "Roman Havrylko",
  "description": "Electron + NextJS test project",
  "scripts": {
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"wait-on http://127.0.0.1:3000 && tsc -p main -w\" \"wait-on http://127.0.0.1:3000 && tsc -p main && electron .\"",
    "build": "next build && tsc -p main && electron-builder",
    "build:electron": "tsc -p main && electron-builder",
    "build:main": "tsc -p main",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.51.24",
    "axios": "^1.7.4",
    "electron-log": "^5.1.7",
    "electron-serve": "^2.1.0",
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "uuid": "^10.0.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "wait-on": "^8.0.0"
  }
}
